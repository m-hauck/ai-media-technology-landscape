{
    "devDependencies": {
        "esbuild": "^0.17.10",
        "eslint": "^8.34.0",
        "typedoc": "^0.23.25"
    },
    "scripts": {
        "esbuild:prod": "esbuild src/main.ts --bundle --outfile=dist/min/main.js --minify",
        "esbuild:dev": "esbuild src/main.ts --bundle --outfile=dist/debug/main.js",
        "build": "npm run esbuild:prod && npm run esbuild:dev",
        "build:watch": "npm run esbuild:dev -- --watch",
        "generate-docs": "npx typedoc"
    }
}
